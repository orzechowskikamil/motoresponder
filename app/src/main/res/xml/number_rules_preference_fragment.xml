<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  android:key="number_rules_preference_fragment">


    <SwitchPreference
            android:summaryOn="@string/responding_restricted_to_contact_list_summary_on"
            android:summaryOff="@string/responding_restricted_to_contact_list_summary_off"
            android:title="@string/responding_restricted_to_contact_list_title"
            android:key="@string/responding_restricted_to_contact_list_key"
            android:defaultValue="@bool/responding_restricted_to_contact_list_default_value"/>


    <SwitchPreference
            android:summaryOn="@string/responding_restricted_to_current_country_summary_on"
            android:summaryOff="@string/responding_restricted_to_current_country_summary_off"
            android:title="@string/responding_restricted_to_current_country_title"
            android:key="@string/responding_restricted_to_current_country_key"
            android:defaultValue="@bool/responding_restricted_to_current_country_default_value"/>


    <SwitchPreference
            android:summaryOn="@string/already_responded_filtering_enabled_summary_on"
            android:summaryOff="@string/already_responded_filtering_enabled_summary_off"
            android:title="@string/already_responded_filtering_enabled_title"
            android:key="@string/already_responded_filtering_enabled_key"
            android:defaultValue="@bool/already_responded_filtering_enabled_default_value"/>

    <ListPreference
            android:title="@string/delay_between_responses_minutes_title"
            android:summary="@string/delay_between_responses_minutes_summary"
            android:key="@string/delay_between_responses_minutes_key"
            android:defaultValue="@integer/delay_between_responses_minutes_default_value"
            android:entries="@array/delay_between_responses_minutes_entries"
            android:entryValues="@array/delay_between_responses_minutes_entry_values"
            android:dialogTitle="@string/delay_between_responses_minutes_dialog_title"
            />


    <ListPreference
            android:title="@string/method_of_limiting_responses_title"
            android:summary="@string/method_of_limiting_responses_summary"
            android:key="@string/method_of_limiting_responses_key"
            android:defaultValue="@string/method_of_limiting_responses_default_value"
            android:entries="@array/method_of_limiting_responses_entries"
            android:entryValues="@array/method_of_limiting_responses_entry_values"
            android:dialogTitle="@string/method_of_limiting_responses_dialog_title"
            />


    <ListPreference
            android:title="@string/whitelist_group_name_title"
            android:summary="@string/whitelist_group_name_summary"
            android:key="@string/whitelist_group_name_key"
            android:defaultValue="@string/whitelist_group_name_default_value"
            />

    <ListPreference
            android:title="@string/blacklist_group_name_title"
            android:summary="@string/blacklist_group_name_summary"
            android:key="@string/blacklist_group_name_key"
            android:defaultValue="@string/blacklist_group_name_default_value"
            />


    <ListPreference
            android:title="@string/geolocation_whitelist_group_name_title"
            android:summary="@string/geolocation_whitelist_group_name_summary"
            android:key="@string/geolocation_whitelist_group_name_key"
            android:defaultValue="@string/geolocation_whitelist_group_name_default_value"
            />

    <EditTextPreference
            android:dialogTitle="@string/device_phone_number_title"
            android:key="@string/device_phone_number_key"
            android:summary="@string/device_phone_number_summary"
            android:defaultValue="@string/device_phone_number_default_value"
            android:title="@string/device_phone_number_title"
            />


</PreferenceScreen>
