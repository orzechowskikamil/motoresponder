<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
              android:layout_height="match_parent" android:orientation="vertical">
    <CheckBox android:id="@+id/checkbox_picker_item_checkbox"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:checked="false" android:textColor="#000000"
              android:layout_marginTop="5dp"/>
    <TextView android:id="@+id/checkbox_picker_item_description"
              android:text="Description"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:layout_marginLeft="30dp" android:textColor="#616161"
              android:layout_marginBottom="5dp"/>
</LinearLayout>
